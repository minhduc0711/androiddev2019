<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_repositories_forked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Forked"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:padding="5px"
            android:background="@color/primaryColor"/>
        <TextView
            android:id="@+id/text_repositories_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="25dp"

            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_star_border_black_24dp" />

        <TextView
            android:id="@+id/text_repositories_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:text="0"/>

        <ImageView
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:src="@drawable/fork" />

        <TextView
            android:id="@+id/text_repositories_fork_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:text="0"/>


        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:src="@drawable/ic_access_time_black_24dp" />

        <TextView
            android:id="@+id/text_repositories_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:text="3 days ago"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:src="@drawable/ic_size_bulleted_black_24dp" />

        <TextView
            android:id="@+id/text_repositories_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:text="33 MB"/>

        <TextView
            android:id="@+id/text_repositories_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:text="Java"/>



    </LinearLayout>

</LinearLayout>