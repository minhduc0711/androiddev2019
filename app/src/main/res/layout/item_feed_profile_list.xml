<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingEnd="15dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/text_title_feed_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        tools:text="nguyenduckhai openpullrequest Minuduc..."/>

    <TextView
        android:id="@+id/text_commit_number_feed_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title_feed_profile"
        android:layout_alignParentStart="true"
        android:alpha="0.5"
        android:text="8 new commit"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/text_message_profile_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_commit_number_feed_profile"
        android:layout_alignParentStart="true"
        android:alpha="0.5"
        android:textSize="16dp"
        tools:text="6382827 Merge branch 'master' of git://github.com/minhduc0711/androiddev2019\n# Conflicts:" />

    <LinearLayout
        android:id="@+id/linear_body_feed_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_message_profile_feed"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_symbol_feed_profile"
            android:layout_width="18dp"
            android:layout_height="18dp"
            tools:src="@drawable/ic_repo_forked" />

        <TextView
            android:id="@+id/text_time_feed_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            tools:text="3 hours ago" />



    </LinearLayout>

    <View
        android:layout_below="@id/linear_body_feed_profile"
        android:alpha="0.5"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        />




</RelativeLayout>

